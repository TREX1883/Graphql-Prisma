model Course {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  description  String?
  defaultCredits String?
  courseCode String?
  //termsOffered String[]
  instructor    Instructor?    @relation(fields: [instructorId], references: [id])
  instructorId  Int?
}

