generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Instructor {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  courses Course[]
}

