datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Ruling {
  id    Int     @id @default(autoincrement())
  date  String
  text String
  mtg   Mtg @relation(fields: [mtgId], references: [id])
  mtgId  Int
}

model Mtg {
  name String @unique
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  color String?
  text String?
  iamgeUrl String?
  rulings Ruling[]
}